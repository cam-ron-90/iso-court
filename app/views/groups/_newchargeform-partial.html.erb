<div class="container">
  <%= simple_form_for [@group, Charge.new] do |f| %>
  <div class="form-card">
    <%= f.association :users, as: :hidden %>
    <%= f.input :category, as: :radio_buttons, collection: ["Hygiene", "Media",
      "Information", "Social distancing", "Calm approach",
      "Fight boredom", "Positive focus", "Social connection", "Physical activity",
      "Work from home", "Tidying"] %>
    <%= f.input :description %>
    <%= f.button :submit, 'LAY CHARGE', class: "brown-btn" %>
  </div>
  <% end %>
</div>
