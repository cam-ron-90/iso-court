<div class="row m-0 p-0" style="height: 90vh">

  <!-- LEFT SIDEBAR -->
  <div class="col-2 p-0" style="position: sticky; flex: 1">
    <div style="height: 90vh; background-color: #224C8E">
      <p>Space for sidebar</p>
      <%#= render 'shared/left_sidebar' %>
    </div>
  </div>

  <!-- CENTER CONTENT -->
  <!-- HEADER -->
  <div class="col-10 col-md-8 p-4" style="position: sticky; flex: 1; height: 90vh; overflow: scroll">
    <h3 class="mb-4">Your Teams
      <%= link_to "BUTTON 1", "#", class: "ml-4 btn brown-btn" %>
      <%= link_to "BUTTON 2", "#", class: "ml-4 btn orange-btn" %>
      <%= link_to "BUTTON 3", "#", class: "ml-4 btn brown-btn" %>
    </h3>

    <!-- GROUPS LIST -->
    <% if current_user.groups.length.zero? %>
      <h3>You don't belong to any group rn ðŸ˜­</h3>
    <% else %>
      <div class="group-carousel">
        <% @groups.each do |group| %>
          <div class="card align-items-center carousel-card" >
            <% if group.admin.avatar.attached? %>
              <%= cl_image_tag user.avatar.key, class: "card-img-top avatar-bordered mt-4" %>
            <% else %>
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "card-img-top avatar-bordered mt-4" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title text-center mb-1"><%= group.name %></h5>
              <div class="text-center">
                <%= link_to "ACCESS GROUP PAGE", group_path(group), class: "btn orange-btn" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- JOIN A GROUP / CREATE A GROUP -->
    <br>
    <h5>Want to join a group?</h5>
    <h5>Look for your friends groups</h5><p> (insert search bar)</p>
    <h5><%= link_to "Or create your own team", new_group_path %></h5>

  </div>

  <!-- RIGHT SIDE BAR - SCOREBOARDS -->
  <div class="col-2 d-none d-md-flex p-1" style="position: sticky; flex: 1; height: 90vh; overflow: scroll">
    <p>Space for scoreboards</p>
    <%#= render partial: "shared/scoreboard" %>
    <%#= render 'shared/commitments' %>
