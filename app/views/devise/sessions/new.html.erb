<div class="row justify-content-center sign-up-page">

  <div class="col-md-6 col-lg-6 main-center">
    <%= render "shared/iso_pres" %>
  </div>

  <div class="col-10 col-md-6 col-lg-6 pl-0">
    <div class="sign-up-form text-right">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs mt-4 mb-4">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "LOG IN", class: "orange-btn mr-2" %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
